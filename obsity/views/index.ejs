<%- include('parts/header') %> <%- include('parts/navbar') %>

<form action="/" method="post">
  <section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem">
            <div class="card-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <% if (error_createStudent.length > 0) { %>
                <div class="p-3 mb-2 bg-danger text-white">
                  <%= error_createStudent %>
                </div>
                <% } %> <% if (success_createStudent.length > 0) { %>
                <div class="p-3 mb-2 bg-success text-white">
                  <%= success_createStudent %>
                </div>
                <% } %>

                <div class="mb-3">
                  <label for="nameSchool" class="form-label">اسم الطالب</label>
                  <input
                    type="text"
                    class="form-control"
                    id="nameSchool"
                    name="name"
                  />
                </div>

                <div class="row g-3 align-items-center mb-3">
                  <div class="form-outline col-auto">
                    <label class="form-label" for="typeNumber">العمر</label>
                    <input
                      type="number"
                      id="typeNumber"
                      class="form-control"
                      name="age"
                    />
                  </div>

                  <div class="col-auto">
                    <span id="textForAge" class="form-text">
                      يجب ان يكون العمر بين 5-19
                    </span>
                  </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                  <div class="form-outline col-auto">
                    <label class="form-label" for="typeNumber">الطول</label>
                    <input
                      type="number"
                      id="typeNumber"
                      class="form-control"
                      name="hight"
                    />
                  </div>
                  <div class="col-auto">
                    <span id="textForAge" class="form-text"> CM </span>
                  </div>
                </div>

                <div class="row g-3 align-items-center mb-3">
                  <div class="form-outline col-auto">
                    <label class="form-label" for="typeNumber">الوزن</label>
                    <input
                      type="number"
                      id="typeNumber"
                      class="form-control"
                      name="weghit"
                    />
                  </div>
                  <div class="col-auto">
                    <span id="textForAge" class="form-text"> KG </span>
                  </div>
                </div>

                <br /><br />
                <button class="btn btn-outline-light btn-lg px-5" type="submit">
                  إضافة الطالب
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>

<%- include('parts/footer') %>
