<%- include('parts/header') %> <%- include('parts/navbar') %>

<div class="container">
  <table class="table caption-top" style="background-color: white">
    <thead class="table">
      <tr>
        <th>المدرسة</th>
        <th>المشرف</th>
        <th>نحافة</th>
        <th>طبيعي</th>
        <th>وزن زائد</th>
        <th>سمنة</th>
        <th>نسبة النحافة</th>
      <th>نسبة السمنة</th> 
      <th> حذف المدرسة </th>   
      </tr>
    </thead>

    <% schools.forEach(i=> { %>
    <tbody>
      <td>
        <h3 style="background-color: white"><%= i.schoolName %></h3>
      </td>
      <td><%= i.username %></td>
      <td><%= i.thinnest %></td>
      <td><%= i.naturalWeight %></td>
      <td><%= i.overWeight %></td>
      <td><%= i.obesity %></td>
      <td><%= i.thinnestPercent%>%</td>
      <td><%= i.obesityPercent%>%</td>
      <td>
        <!-- delete the school-->
        <center>
        <a
          style="text-decoration: none"
          href="/schools/<%=i._id%>?_method=delete"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="black"
            class="bi bi-trash"
            viewBox="0 0 16 16"
          >
            <path
              d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
            />
            <path
              fill-rule="evenodd"
              d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
            />
          </svg>
        </a>
      </center>
      </td>
    </tbody>

    <% }); %>
  </table>
</div>

<%- include('parts/footer') %>
























