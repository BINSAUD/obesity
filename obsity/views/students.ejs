<%- include('parts/header') %> <%- include('parts/navbar') %>

<!--view the students-->
<% if(students.length > 0){ %>
<div class="card-footer">
  <table class="table caption-top" style="background-color: white">
    
    <thead>
      <tr>
        <th scope="col">رقم</th>
        <th scope="col">الاسم</th>
        <th scope="col">العمر</th>
        <th scope="col">الطول</th>
        <th scope="col">الوزن</th>
        <th scope="col">الكتلة</th>
        <th scope="col">الحالة</th>
        <th scope="col">تعديل</th>
      </tr>
    </thead>

    <tbody>
      <% let c = 1; %> <% students.forEach(student => { %>

      <tr>
        <th scope="row"><%= c++; %></th>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.hight %></td>
        <td><%= student.weghit %></td>
        <td><%= student.bloc %></td>
        <td><%= student.obesity %></td>
        <td>

          <a href="/s/update/<%= student._id %>">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="black"
              class="bi bi-pen-fill"
              viewBox="0 0 16 16"
            >
              <path
                d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"
              />
            </svg>
          </a>

        </td>
      </tr>
      <% }); %>
    </tbody>
    <% if (success_updateStudent.length > 0) { %>
    <center>
      <div class="p-3 mb-2 bg-success text-white">
        <%= success_updateStudent %>
      </div>
    </center>
    <% } %> <% if (success_deleteStudent.length > 0) { %>
    <center>
      <div class="p-3 mb-2 bg-success text-white">
        <%= success_deleteStudent %>
      </div>
    </center>
    <% } %> <% if (error_updateStudent.length > 0) { %>
    <center>
      <div class="p-3 mb-2 bg-danger text-white">
        <%= error_updateStudent %>
      </div>
    </center>
    <% } %>
  </table>
</div>




<% }else{ %>
<br/><br/>
<center><h1>لايوجد طلاب</h1></center>
<% } %>



 <%- include('parts/footer') %>
